<phone:PhoneApplicationPage
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:controlsPrimitives="clr-namespace:Microsoft.Phone.Controls.Primitives;assembly=Microsoft.Phone.Controls" 
    xmlns:Converter="clr-namespace:WeTongji.Converter"
    xmlns:System="clr-namespace:System;assembly=mscorlib" 
    x:Class="WeTongji.CampusInfo" 
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="768"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="True"
    x:Name="PageSelf"
    >

	<phone:PhoneApplicationPage.Resources>
		<Style x:Key="PivotHeaderItemStyle1" TargetType="controlsPrimitives:PivotHeaderItem">
			<Setter Property="FontSize" Value="40"/>
			<Setter Property="Padding" Value="21,0,-8,0"/>
		</Style>

		<Style x:Key="PivotStyle1" TargetType="controls:Pivot">
			<Setter Property="Margin" Value="0"/>
			<Setter Property="Padding" Value="0"/>
			<Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}"/>
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="ItemsPanel">
				<Setter.Value>
					<ItemsPanelTemplate>
						<Grid/>
					</ItemsPanelTemplate>
				</Setter.Value>
			</Setter>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="controls:Pivot">
						<Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}" VerticalAlignment="{TemplateBinding VerticalAlignment}">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							<Grid Background="{TemplateBinding Background}" CacheMode="BitmapCache" Grid.RowSpan="3"/>
							<ContentPresenter ContentTemplate="{TemplateBinding TitleTemplate}" Content="{TemplateBinding Title}" Margin="0,0,0,-7"/>
							<controlsPrimitives:PivotHeadersControl x:Name="HeadersListElement" Grid.Row="1" ItemContainerStyle="{StaticResource PivotHeaderItemStyle1}" Margin="0,22,0,-7"/>
							<ItemsPresenter x:Name="PivotItemPresenter" Margin="{TemplateBinding Padding}" Grid.Row="2"/>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>


        <Converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Converter:TurnOverVisibilityConverter x:Key="TurnOverVisibilityConverter"/>

        <!--
        DataTemplate for 同济动态 & 校务通知
        -->
        <DataTemplate x:Key="CustomListBoxItemTemplate">
            <Grid>
                <Grid x:Name="Grid_Recommended" Visibility="{Binding IsRecommended, Converter={StaticResource BoolToVisibilityConverter}}"
                                          Width="{Binding ActualWidth, ElementName=PageSelf}" Margin="0,0,0,33">
                    <!--<Image Stretch="UniformToFill"/>-->
                    <Rectangle Fill="Orange" Height="202"/>
                    <Grid VerticalAlignment="Bottom" Height="40" Background="#7F000000">
                        <TextBlock Margin="21,-3,21,0" VerticalAlignment="Center" TextTrimming="WordEllipsis" FontSize="19" 
                                                       Text="校党委书记周祖翼和校长裴钢发表新年祝词"/>
                    </Grid>
                </Grid>

                <Grid Visibility="{Binding Visibility, ElementName=Grid_Recommended, Converter={StaticResource TurnOverVisibilityConverter}}"
                                          Margin="20,0,24,0">
                    <!--Illustrated-->
                    <Grid x:Name="Grid_Illustrated"  Margin="0,0,0,32" 
                                          Visibility="{Binding HasPic, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <!--Title & Summary-->
                            <ColumnDefinition Width="270"/>
                            <ColumnDefinition Width="34"/>
                            <!--Illustration-->
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <!--Title-->
                            <TextBlock TextWrapping="Wrap" FontSize="22" Foreground="#FF454545" 
                                                       Text="我校与樱美林大学共植友谊樱花树" Margin="0,-6,0,0"/>
                            <!--Summary-->
                            <TextBlock TextWrapping="Wrap" FontSize="20" Foreground="#FF8A8A8A" 
                                                       Text="摘要一定20个字以内。。。" Margin="0,20,0,-3"/>
                        </StackPanel>

                        <!--@_@-->
                        <!--<Image Grid.Column="2" Stretch="UniformToFill"/>-->
                        <Rectangle Grid.Column="2"  Fill="Purple" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </Grid>

                    <!--Not-Illustrated-->
                    <Grid Visibility="{Binding Visibility, ElementName=Grid_Illustrated, Converter={StaticResource TurnOverVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <!--Title-->
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <!--Summary-->
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="32"/>
                        </Grid.RowDefinitions>

                        <!--Title-->
                        <TextBlock TextWrapping="Wrap" FontSize="22" Foreground="#FF454545" Margin="0,-6,0,0"
                                                   Text="我校与樱美林大学共植友谊樱花树"/>
                        <!--Summary-->
                        <TextBlock Grid.Row="2" TextWrapping="Wrap" FontSize="20" Foreground="#FF8A8A8A" Margin="0,0,0,-3"
                                               Text="摘要一定twenty个字以内。。。"/>
                    </Grid>
                </Grid>
            </Grid>
        </DataTemplate>
        
	</phone:PhoneApplicationPage.Resources>
	<phone:PhoneApplicationPage.FontFamily>
		<StaticResource ResourceKey="PhoneFontFamilyNormal"/>
	</phone:PhoneApplicationPage.FontFamily>
	<phone:PhoneApplicationPage.FontSize>
		<StaticResource ResourceKey="PhoneFontSizeNormal"/>
	</phone:PhoneApplicationPage.FontSize>
	<phone:PhoneApplicationPage.Foreground>
		<StaticResource ResourceKey="PhoneForegroundBrush"/>
	</phone:PhoneApplicationPage.Foreground>

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot">
        <!--Pivot Control-->
        <controls:Pivot x:Name="Pivot_Core"  Style="{StaticResource PivotStyle1}">
            <controls:Pivot.Title>
                <Grid Height="34">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Background="#FF2D7ECA" Grid.ColumnSpan="3"/>
                    
                    <TextBlock VerticalAlignment="Center" Text="校园资讯" FontSize="20"
                               Grid.Column="1" Margin="0,0,0,3"/>
                    <Path Grid.Column="3"  Data="M0,0 L12,17 L0,34 z" Fill="#FF2D7ECA"/>
                </Grid>
            </controls:Pivot.Title>

            <!--
同济动态
            -->
            <controls:PivotItem Header="同济动态" Margin="0,30,0,0">
                <ListBox x:Name="ListBox_TongjiNews" BorderThickness="0" BorderBrush="{x:Null}"
                         ScrollViewer.VerticalScrollBarVisibility="Hidden"
                         ItemTemplate="{StaticResource CustomListBoxItemTemplate}"
                         SelectionChanged="Listbox_TongjiNews_SelectionChanged"/>
            </controls:PivotItem>

            <!--
周边推荐
            -->
            <controls:PivotItem Header="周边推荐" Margin="0,30,0,0">
                <ListBox x:Name="ListBox_Nearby" Margin="20,0,0,0"
                    BorderThickness="0" BorderBrush="{x:Null}"
                         SelectionChanged="ListBox_NearBy_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="90"  Margin="0,0,26,40">
                                <Grid.ColumnDefinitions>
                                    <!--Image-->
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="13"/>
                                    <!--Name & Tags-->
                                    <ColumnDefinition Width="240"/>
                                    <!--Is a Ticket-->
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                
                                <!--@_@-->
                                <!--<Image Stretch="UniformToFill"/>-->
                                <Rectangle Fill="Purple"/>
                                
                                <Grid Grid.Column="2" Margin="0,-2,0,0">
                                    <!--Name-->
                                    <TextBlock VerticalAlignment="Top" TextWrapping="Wrap" FontSize="24" Foreground="#FF454545"
                                               Text="港荟一品 新推菜品"/>
                                    <!--Tags-->
                                    <TextBlock VerticalAlignment="Bottom" TextWrapping="Wrap" FontSize="18" Foreground="#FF8A8A8A"
                                               Text="美食 新品 推荐"/>
                                </Grid>

                                <Grid Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Right"
                                      Width="22" Height="22" Background="#FFF16C00" Margin="0,5,0,0"
                                      Visibility="{Binding Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="票" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Margin="0,0,0,1" Foreground="White"/>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
			</controls:PivotItem>


            <!--
校务通知
            -->
            <controls:PivotItem Header="校务通知" Margin="0,30,0,0">
                <ListBox x:Name="ListBox_OfficialNotes" BorderThickness="0" BorderBrush="{x:Null}"
                         ScrollViewer.VerticalScrollBarVisibility="Hidden"
                         ItemTemplate="{StaticResource CustomListBoxItemTemplate}"
                         SelectionChanged="Listbox_OfficialNotes_SelectionChanged"/>
            </controls:PivotItem>

            <!--
社团通告
            -->
            <controls:PivotItem Header="社团通告" Margin="0,30,0,0">
                <ListBox x:Name="ListBox_SocietyNews"  Margin="20,0,0,0" BorderThickness="0" BorderBrush="{x:Null}"
                         SelectionChanged="ListBox_SocietyNews_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,36,38">
                                <!--Illustrated-->
                                <Grid x:Name="Grid_Illustrated"
                                      Visibility="{Binding Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Grid.ColumnDefinitions>
                                        <!--Title & Society-->
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="50"/>
                                        <!--Illustration-->
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel>
                                        <TextBlock TextWrapping="Wrap" Foreground="#FF454545" FontSize="23" Margin="0,-6,0,0"
                                                   Text="轮滑社开始常规活动啦！"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                                            <!--@_@ Icon of the Society-->
                                            <!--<Image Width="35" Height="35"/>-->
                                            <Rectangle Fill="Orange" Width="35" Height="35"/>
                                            <TextBlock VerticalAlignment="Center" Margin="16,-1,0,0"  TextTrimming="WordEllipsis"  Foreground="#FF8A8A8A" FontSize="18"
                                                   Text="轮滑社"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!--@_@ Illustration-->
                                    <!--<Image Grid.Column="2" Stretch="UniformToFill"/>-->
                                    <Rectangle Fill="Purple" Grid.Column="2"/>  
                                </Grid>
                                
                                <!--Not Illustrated-->
                                <StackPanel Visibility="{Binding Visibility, ElementName=Grid_Illustrated, Converter={StaticResource TurnOverVisibilityConverter}}">
                                    <TextBlock TextWrapping="Wrap" Foreground="#FF454545" FontSize="23"
                                                   Text="微同济iOS2.0正式推出"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                                        <!--@_@ Icon of the Society-->
                                        <!--<Image Width="35" Height="35"/>-->
                                        <Rectangle Fill="Orange" Width="35" Height="35"/>
                                        <TextBlock VerticalAlignment="Center" Margin="16,0,0,0"  TextTrimming="WordEllipsis"  Foreground="#FF8A8A8A" FontSize="18"
                                                   Text="微同济团队官方帐号"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </controls:PivotItem>


        </controls:Pivot>
    </Grid>
    
</phone:PhoneApplicationPage>