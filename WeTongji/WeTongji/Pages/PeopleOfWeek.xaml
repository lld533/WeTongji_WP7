								<TextBlock Grid.Row="2" Grid.Column="2" Text="35" FontSize="22" Margin="0,0,0,4" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
							</Grid>

						</Grid>

						<TextBlock Text="徐磊" Margin="0,12,0,0" FontSize="38" Foreground="{StaticResource PeopleOfWeekThemeBrush}"/>

						<TextBlock Foreground="#FF999999" TextWrapping="Wrap"
							Text="钻石小鸟联合总裁，1997年毕业于同济大学" Margin="0,8,0,0" FontSize="22"/>
					</StackPanel>
				</ScrollViewer>
			</controls:PivotItem>
			<controls:PivotItem Header="经历故事" Style="{StaticResource WTPivotItemStyle}">
				<ScrollViewer VerticalScrollBarVisibility="Hidden">
					<StackPanel>
					<Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
