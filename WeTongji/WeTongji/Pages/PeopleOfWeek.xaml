                        <!--One sentence-->
                        <TextBlock Grid.Row="1" Grid.Column="1" Foreground="{StaticResource PeopleOfWeekThemeBrush}" TextWrapping="Wrap" Margin="14,-20,0,-1" FontSize="36"
									Text="因为梦想，所以坚持。"/>
                    </Grid>

					<TextBlock Foreground="White" TextWrapping="Wrap" FontSize="22" Margin="0,21,0,0"
								Text="       你很难把这位略显粗犷的男人与美丽而精致的钻石联系在一起，可他的确拥有着众多钻石珠宝界的专业头衔："/>
					</StackPanel>
				</ScrollViewer>
			</controls:PivotItem>
			<controls:PivotItem Header="生活图片" Style="{StaticResource WTPivotItemStyle}">				
				<ListBox x:Name="ListBox_Pic" ScrollViewer.VerticalScrollBarVisibility="Hidden">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<Grid Margin="0,0,0,40">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="260"/>
									<ColumnDefinition Width="15"/>
									<ColumnDefinition/>
								</Grid.ColumnDefinitions>

								<!--<Image Stretch="UniformToFill"/>-->
								<Rectangle Height="180" Fill="Pink"/>
								<TextBlock Grid.Column="2" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="22"
											Text="钻石小鸟惊艳2010中国钻石论坛" Margin="0,-4,0,0"/>
							</Grid>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>				
			</controls:PivotItem>
		</controls:Pivot>

    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar>
            <shell:ApplicationBarIconButton IconUri="/icons/appbar.check.rest.png" Text="查看历史" Click="NavToHistory"/>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>