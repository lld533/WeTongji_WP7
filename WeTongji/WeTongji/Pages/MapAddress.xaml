            <BingMap:MapTileLayer>
                <BingMap:MapTileLayer.TileSources>
                    <!--<NokiaMapsSDK:NokiaMapsTile TileTypes="Street"/>-->
                    <GoogleMapsSDK:GoogleMapsRoadTileSource/>
                </BingMap:MapTileLayer.TileSources>
            </BingMap:MapTileLayer>

            <BingMap:MapLayer>
                <BingMap:Pushpin x:Name="MyPushpin" Template="{StaticResource IconPushpin}"/>
                <BingMap:Pushpin x:Name="MyBillboardPushpin" Template="{StaticResource BillboardPushpin}"/>
            </BingMap:MapLayer>
        </BingMap:Map>

        <!--Direction Button-->
        <Button Content="Button" HorizontalAlignment="Left" Height="48" Margin="20,0,0,30" Style="{StaticResource IntelligentCurrentPlaceFinder}" VerticalAlignment="Bottom" Width="48"/>

